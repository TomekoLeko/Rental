<p id="notice"><%= notice %></p>

<h1>Dues</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Rent</th>
      <th>Property</th>
      <th>Tenant</th>
      <th>Period from</th>
      <th>Period to</th>
      <th>Amount</th>
      <th>Paid amount</th>
      <th>Paid at</th>
      <th>Payment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dues.each do |due| %>
      <tr>
        <td><%= due.type_id %></td>
        <td><%= due.rent_id %></td>
        <td><%= due.property_id %></td>
        <td><%= due.tenant_id %></td>
        <td><%= due.period_from %></td>
        <td><%= due.period_to %></td>
        <td><%= due.amount %></td>
        <td><%= due.paid_amount %></td>
        <td><%= due.paid_at %></td>
        <td><%= due.payment_date %></td>
        <td><%= link_to 'Show', due %></td>
        <td><%= link_to 'Edit', edit_due_path(due) %></td>
        <td><%= link_to 'Destroy', due, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

