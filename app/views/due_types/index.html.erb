
<div class="title-and-add-button">
<h1>Due and bill Types</h1>
<%= link_to '+', new_due_type_path, class:"btn btn-success " %>
</div>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @due_types.each do |due_type| %>
      <% if due_type.user_id == current_user.id %>
      <tr>
        <td><%= due_type.name %></td>
      
        <td><%= link_to 'Edit', edit_due_type_path(due_type), class:"btn btn-outline-secondary"  %></td>
        <td><%= link_to 'X', due_type, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
        
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to dues', dues_path, class:"btn btn-secondary" %>
