<p id="notice"><%= notice %></p>

<h1>Rents</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Paymant date</th>
      <th>Rent</th>
      <th>Deposit</th>
      <th>Property</th>
      <th>Tenant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.from %></td>
        <td><%= rent.to %></td>
        <td><%= rent.paymant_date %></td>
        <td><%= rent.rent %></td>
        <td><%= rent.deposit %></td>
        <td><%= rent.property_id %></td>
        <td><%= rent.tenant_id %></td>
        <td><%= link_to 'Show', rent %></td>
        <td><%= link_to 'Edit', edit_rent_path(rent) %></td>
        <td><%= link_to 'Destroy', rent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

